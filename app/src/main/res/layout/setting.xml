<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.nj.cantus.SettingActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp">

        <Button
            android:id="@+id/color_speed_pink"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@color/color_pink"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="fill"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/color_speed_yellow"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@color/color_yellow"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="fill"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/color_speed_skyblue"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@color/color_skyblue"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="fill"
            android:layout_margin="5dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="horizontal"
        android:layout_marginStart="20dp">


        <Button
            android:id="@+id/color_speed_green"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@color/color_green"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="fill"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/color_speed_red"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@color/color_red"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="fill"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/color_speed_purple"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@color/color_purple"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="fill"
            android:layout_margin="5dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@android:color/white"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="horizontal"
        android:layout_marginStart="20dp">

        <Button
            android:id="@+id/color_start_pink"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@color/color_pink"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="fill"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/color_start_yellow"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@color/color_yellow"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="fill"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/color_start_skyblue"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@color/color_skyblue"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="fill"
            android:layout_margin="5dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="horizontal"
        android:layout_marginStart="20dp">


        <Button
            android:id="@+id/color_start_green"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@color/color_green"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="fill"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/color_start_red"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@color/color_red"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="fill"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/color_start_purple"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@color/color_purple"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="fill"
            android:layout_margin="5dp"/>
    </LinearLayout>

</LinearLayout>
