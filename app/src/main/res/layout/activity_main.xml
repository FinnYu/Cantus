<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.nj.cantus.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/button_50"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@drawable/speed_button_pink"
            android:button="@android:color/transparent"
            android:gravity="center_vertical|center_horizontal"
            android:text="50"
            android:textColor="#fff"
            android:textSize="20sp"/>

        <RadioButton
            android:id="@+id/button_70"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@drawable/speed_button_pink"
            android:button="@android:color/transparent"
            android:gravity="center_vertical|center_horizontal"
            android:text="70"
            android:textColor="#fff"
            android:textSize="20sp"/>

        <RadioButton
            android:id="@+id/button_90"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@drawable/speed_button_pink"
            android:button="@android:color/transparent"
            android:gravity="center_vertical|center_horizontal"
            android:text="90"
            android:textColor="#fff"
            android:textSize="20sp"/>

        <RadioButton
            android:id="@+id/button_110"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@drawable/speed_button_pink"
            android:button="@android:color/transparent"
            android:gravity="center_vertical|center_horizontal"
            android:text="110"
            android:textColor="#fff"
            android:textSize="20sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/button_60"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/speed_button_pink"
            android:button="@android:color/transparent"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:text="60"
            android:textSize="20sp"
            android:textColor="#fff"/>

        <RadioButton
            android:id="@+id/button_80"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/speed_button_pink"
            android:button="@android:color/transparent"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:text="80"
            android:textSize="20sp"
            android:textColor="#fff"/>

        <RadioButton
            android:id="@+id/button_100"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/speed_button_pink"
            android:button="@android:color/transparent"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:text="100"
            android:textSize="20sp"
            android:textColor="#fff"/>

        <RadioButton
            android:id="@+id/button_120"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/speed_button_pink"
            android:button="@android:color/transparent"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:text="120"
            android:textSize="20sp"
            android:textColor="#fff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/timer"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="TIME		00:00:00"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <RadioButton
            android:id="@+id/button_start"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:background="@drawable/start_button_skyblue"
            android:button="@android:color/transparent"
            android:gravity="center_vertical|center_horizontal"
            android:text="START"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <RadioButton
            android:id="@+id/button_L1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/l_button_states"
            android:button="@android:color/transparent"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:text="L1"
            android:textSize="40sp"
            android:textColor="#fff"/>

        <ImageButton
            android:id="@+id/camera_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/camera_button_status"
            android:backgroundTint="@android:color/white">

        </ImageButton>


        <RadioButton
            android:id="@+id/button_L2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/l_button_states"
            android:button="@android:color/transparent"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:text="L2"
            android:textSize="40sp"
            android:textColor="#fff"/>

    </LinearLayout>

</LinearLayout>
